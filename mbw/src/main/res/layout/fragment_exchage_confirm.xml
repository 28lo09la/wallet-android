<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_witherrors_centered"
    android:clickable="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/confirmation"
        android:textColor="?exchange_text_color"
        android:textSize="16sp"
        tools:textColor="#bdbdbd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:background="#2c2c2c"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/fromAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="11sp"
            android:textColor="@color/sender_recyclerview_background_red"
            android:textSize="18sp"
            tools:text="5.3092 BCH" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fromLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#bdbdbd"
                android:textSize="16sp"
                tools:text="from label" />

            <TextView
                android:id="@+id/fromAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="1p17cu…KNZa88"
                android:textColor="#5c5c5c"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginLeft="10dp"
                android:text="sending"
                android:textColor="#bdbdbd"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedede" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2c2c2c"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/toAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="end"
            android:lineSpacingExtra="11sp"
            android:textColor="@color/sender_recyclerview_background_green"
            android:textSize="18sp"
            tools:text="5.2014 BTC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/toLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:gravity="end"
                android:singleLine="true"
                android:textColor="#bdbdbd"
                android:textSize="16sp"
                tools:text="to label" />

            <TextView
                android:id="@+id/toAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="4bYT8…KRp88"
                android:textColor="#5c5c5c"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginLeft="10dp"
                android:gravity="end"
                android:text="receiving"
                android:textColor="#bdbdbd"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="sans-serif"
        android:text="@string/exchange_amount_is_approximate_due_to_the_high_volatility_of_the_cryptomarket"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/offer_update_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="sans-serif"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textStyle="normal" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:indeterminate="true"
        android:visibility="invisible" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonContinue"
            style="@style/MyceliumButtonModernBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/exchange"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </FrameLayout>

</LinearLayout>