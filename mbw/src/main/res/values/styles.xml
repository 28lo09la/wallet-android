    </style>

    <style name="MyceliumModern.Dark">
        <item name="exchange_text_color">@color/white</item>
        <item name="change_color_scheme_icon">@drawable/ic_color_lens_white_24px</item>
        <item name="actionBarStyle">@style/ActionBarDark</item>
    </style>

    <style name="ActionBarDark" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/TitleTextStyleDark</item>
    </style>

    <style name="TitleTextStyleDark" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
