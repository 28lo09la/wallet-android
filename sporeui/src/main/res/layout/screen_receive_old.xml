<?xml version="1.0" encoding="utf-8"?>
<com.mycelium.sporeui.ReceiveView xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:custom="http://schemas.android.com/apk/res-auto"
             android:orientation="vertical"
             android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:text="@string/tap_qr_code"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="24dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/greyish"
        android:layout_gravity="center_horizontal"/>
    <com.mycelium.sporeui.QRCodeView
        android:id="@+id/qrcode"
        android:layout_gravity="center"
        android:layout_width="288dp"
        android:layout_height="288dp"
        custom:dimension="288" />
    <TextView
        android:id="@+id/address"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_height="24dp"/>
</com.mycelium.sporeui.ReceiveView>