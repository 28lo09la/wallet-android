<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/sender_debitcard_choose_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:visibility="gone"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Spinner
        android:id="@+id/accounts_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:text="Card Number"/>

        <TextView
            android:id="@+id/account_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="1234 5678 9012 3456"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="93dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Expiry Date"/>

            <TextView
                android:id="@+id/account_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:text="10 / 19"/>

            <View
                android:layout_width="148dp"
                android:layout_height="1dp"
                android:background="@color/selection_background"
                android:visibility="visible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="93dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="CVC"/>

            <TextView
                android:id="@+id/account_uselessweirdneedtoaskdesigner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:text="042"/>

            <View
                android:layout_width="148dp"
                android:layout_height="1dp"
                android:background="@color/selection_background"
                android:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="93dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Cardholder name"/>

            <TextView
                android:id="@+id/account_keys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:text="John McMurphy"/>

            <View
                android:layout_width="148dp"
                android:layout_height="1dp"
                android:background="@color/selection_background"
                android:visibility="visible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="93dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Nickname"/>

            <TextView
                android:id="@+id/account_masterseed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:text="Visa 1"/>

            <View
                android:layout_width="148dp"
                android:layout_height="1dp"
                android:background="@color/selection_background"
                android:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>