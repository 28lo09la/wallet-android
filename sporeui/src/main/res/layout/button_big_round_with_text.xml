<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <com.mycelium.sporeui.RoundButton
        android:id="@+id/roundButton"
        android:layout_width="@dimen/BigRoundButton_diameter"
        android:layout_height="@dimen/BigRoundButton_diameter"
        custom:backgroundColor="@color/colorWalletScanButton"
        android:src="@drawable/wallet_scan_icon" />
    <Space
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_weight="1" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="center"
        android:text="SCAN" />
</LinearLayout>